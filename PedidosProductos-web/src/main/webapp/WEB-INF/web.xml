<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PedidosProductos</servlet-name>
        <servlet-class>com.mycompany.servlets.PedidosProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PedidoNuevo</servlet-name>
        <servlet-class>com.mycompany.servlets.PedidoNuevo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PedidoMod</servlet-name>
        <servlet-class>com.mycompany.servlets.PedidoMod</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarPedido</servlet-name>
        <servlet-class>com.mycompany.servlets.EliminarPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PedidosProductos</servlet-name>
        <url-pattern>/PedidosProductos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PedidoNuevo</servlet-name>
        <url-pattern>/PedidoNuevo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PedidoMod</servlet-name>
        <url-pattern>/PedidoMod</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarPedido</servlet-name>
        <url-pattern>/EliminarPedido</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
